<div class="dashboard-main container-fluid px-2">
  <div class="dashboard-sub container px-2">
    <div class="post-header"><h2 class="dashboard-header post-title" contenteditable="false">{{postTitle}}</h2></div>
    <hr>
    <div class="post-body" contenteditable="false">{{postBody}}</div>
    <hr>
    <div class="post-footer">Posted by {{user.userName}} on {{format_date date_created}}</div>
    <div class="comments">
      <h5 class="comments-header">Comments:</h5>
    </div>
  </div>
</div>