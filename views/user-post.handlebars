<div class="dashboard-main container-fluid px-2">
  <div class="dashboard-sub container px-2">
    <div class="post-header"><h2 class="dashboard-header post-title" contenteditable="true">{{postTitle}}</h2></div>
    <hr>
    <div class="post-body" contenteditable="true">{{postBody}}</div>
    <hr>
    <div class="post-footer">Posted on {{format_date date_created}}</div>
    <div class="btn-field"><button class="edit-btn custom-btn btn btn-primary" data-id="{{id}}" type="button">Edit Post</button><button class="delete-btn custom-btn btn btn-primary" data-id="{{id}}" type="button">Delete Post</button></div>
    <p class="user-note">Post can be freely edited on this page, and saved by clicking the 'Edit Post' button.</p>
  </div>
</div>

<script src="/js/post.js"></script>